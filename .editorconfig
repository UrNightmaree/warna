[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.{lua,rockspec}]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 2

[{*.sh,.envrc}]
indent_style = space
indent_size = 2

# shfmt configs
switch_case_indent = true
binary_next_line = true
space_redirects = true
